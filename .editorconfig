# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# TypeScript, JavaScript, React files
[*.{ts,tsx,js,jsx,css}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configuration files (keep 2 spaces as convention)
[*.{json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

